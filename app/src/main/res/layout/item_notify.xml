<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/llContentNotify"
        android:layout_margin="8dp"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ivNotify"
        android:src="@drawable/icon_notify"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
        <LinearLayout
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvTitle"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Notify Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvBody"
                android:textSize="12sp"
                android:text="Notify Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/llContentNotify"
        android:background="@color/bgTabInActive"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>