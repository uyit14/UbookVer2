<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notify.NotifyFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tbNotify"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorApp"
        app:title="@string/notify"></android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvNotify"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tbNotify"
        tools:listitem="@layout/item_notify">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>